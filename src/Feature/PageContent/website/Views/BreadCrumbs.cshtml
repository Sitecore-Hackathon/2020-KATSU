@using PSGN.Feature.PageContent.ViewModels

@model List<BreadcrumbViewModel>

<h1>
    @for (int i = 0; i < Model.Count; i++)
    {
        if (i == 0)
        {
            <span class="text-lightGray">
                @Model[i].Title
                @if (Model.Count > 1)
                {
                <literal>/</literal>
                }
            </span>
        }
        else
        {
            @Model[i].Title

            if (i != (Model.Count - 1))
            {
                <literal>/</literal>
            }
        }
    }
</h1>